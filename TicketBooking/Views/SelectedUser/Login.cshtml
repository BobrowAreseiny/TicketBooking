@model AccountViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Вход</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Почта</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Войти" id="submit" class="btn btn-primary" />             
            </div>
            <div class="form-group">                
                <a id="submit" asp-controller="SelectedUser" asp-action="Register" class="btn btn-primary">Регистрация</a>
            </div>
        </form>
    </div>
</div>

